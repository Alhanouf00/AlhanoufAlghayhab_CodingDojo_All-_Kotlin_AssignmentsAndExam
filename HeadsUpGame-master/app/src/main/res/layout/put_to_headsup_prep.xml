<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




<com.google.android.material.textfield.TextInputLayout
android:id="@+id/name_text_put"
android:layout_width="280dp"
android:layout_height="wrap_content"
android:layout_marginTop="150dp"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent">

<com.google.android.material.textfield.TextInputEditText
    android:id="@+id/name_put"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Name" />
</com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
android:id="@+id/taboo1_text_put"
android:layout_width="280dp"
android:layout_height="wrap_content"
android:layout_marginTop="30dp"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/name_text_put">

<com.google.android.material.textfield.TextInputEditText
    android:id="@+id/taboo1_put"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Taboo1" />
</com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
android:id="@+id/taboo2_text_put"
android:layout_width="280dp"
android:layout_height="wrap_content"
android:layout_marginTop="30dp"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/taboo1_text_put">

<com.google.android.material.textfield.TextInputEditText
    android:id="@+id/taboo2_put"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Taboo2" />
</com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
android:id="@+id/taboo3_text_put"
android:layout_width="280dp"
android:layout_height="wrap_content"
android:layout_marginTop="30dp"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/taboo2_text_put">

<com.google.android.material.textfield.TextInputEditText
    android:id="@+id/taboo3_put"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Taboo3" />
</com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>